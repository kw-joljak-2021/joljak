<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#87CEEB"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/idText1"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="320dp"
        android:hint="ID"
        android:drawableStart="@drawable/ic_baseline_person_24"
        android:drawableLeft="@drawable/ic_baseline_person_24"/>

    <EditText
        android:id="@+id/passwordText1"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/idText1"
        android:layout_centerHorizontal="true"
        android:hint="Password"
        android:drawableStart="@drawable/ic_baseline_lock_24"
        android:drawableLeft="@drawable/ic_baseline_lock_24"/>

    <Button
        android:id="@+id/loginButton"
        android:layout_width="140dp"
        android:layout_height="55dp"
        android:layout_below="@+id/passwordText1"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="12dp"
        android:layout_toStartOf="@+id/RegisterButton1"
        android:fontFamily="@font/font2"
        android:text="로그인"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/RegisterButton1"
        android:layout_width="140dp"
        android:layout_height="55dp"
        android:layout_alignTop="@+id/loginButton"
        android:layout_alignEnd="@+id/passwordText1"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="4dp"
        android:fontFamily="@font/font2"
        android:text="회원가입"
        android:textAllCaps="false" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Remember login" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="266dp"
        android:layout_height="456dp"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/logo" />

</RelativeLayout>
