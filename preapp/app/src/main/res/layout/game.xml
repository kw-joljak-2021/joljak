<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#87CEEB"
>

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="480dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="buttony"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/correct" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="480dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="buttonx"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/wrong" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp"
        android:layout_marginBottom="60dp"
        android:scaleType="fitCenter"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="380dp"
        android:fontFamily="@font/font2"
        android:text="Hello World!"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/LifeImage"
        android:layout_width="73dp"
        android:layout_height="61dp"
        android:layout_marginLeft="200dp"
        app:srcCompat="@android:drawable/star_off"
        app:tint="#FFE500" />

    <ImageView
        android:id="@+id/LifeImage2"
        android:layout_width="73dp"
        android:layout_height="61dp"
        android:layout_marginLeft="250dp"
        app:srcCompat="@android:drawable/star_off"
        app:tint="#FFE500" />

    <ImageView
        android:id="@+id/LifeImage3"
        android:layout_width="73dp"
        android:layout_height="61dp"
        android:layout_marginLeft="300dp"
        app:srcCompat="@android:drawable/star_off"
        app:tint="#FFE500" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:fontFamily="@font/font2"
        android:text="1         "
        android:textColor="#FFF500"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/text3"
        android:layout_width="70dp"
        android:layout_height="30dp"

        android:layout_alignStart="@+id/text2"
        android:layout_alignParentTop="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/font2"
        android:text="/ 20"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="?attr/actionModeCloseDrawable" />

</RelativeLayout>